<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/idChefOrder_RelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/idChefOrder_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idChefOrder_Status"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/colorRed" />


        <TextView
            android:id="@+id/idChefOrder_Name"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp" />


        <TextView
            android:id="@+id/idChefOrder_Start"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="102dp" />


        <TextView
            android:id="@+id/idChefOrder_Tel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="184dp"
            android:layout_marginTop="42dp" />


        <TextView
            android:id="@+id/idChefOrder_Addr"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="72dp" />


        <TextView
            android:id="@+id/idChefOrder_Send"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="132dp" />

        <Button
            android:id="@+id/btnOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:text="▼" />

        <LinearLayout
            android:id="@+id/foodHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="170dp"
            android:background="@color/colorBlue"
            android:visibility="gone">

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="食材名稱"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="數量"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="價格"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

