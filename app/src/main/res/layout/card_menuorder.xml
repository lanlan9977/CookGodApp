<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <ImageView
        android:id="@+id/idMenu_or_icon"
        android:layout_width="30dp"
        android:layout_height="27dp" />

    <RelativeLayout
        android:id="@+id/idMenu_Order_Layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"

        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/idMenu_or_id"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="69dp"
            android:text="Android version name"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="@dimen/abc_text_size_caption_material"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="167dp" />
        <!--訂單名稱-->

        <TextView
            android:id="@+id/idMenu_or_appt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:text="Test"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="@dimen/abc_text_size_subhead_material"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp" />


        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/idMenu_or_appt"
            android:layout_alignRight="@+id/idMenu_or_appt"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="22dp"
            android:numStars="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/idMenu_or_status"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:padding="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <!--訂單內容-->
    </RelativeLayout>
</android.support.v7.widget.CardView><!--訂單選擇列表介面-->