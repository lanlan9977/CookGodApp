<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="550dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:padding="16dp"
        android:text="確認訂單食材"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/idChef_Or"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@color/colorWhite"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:background="@drawable/text_view_border_black"
            android:gravity="top"
            android:padding="2dp"
            android:text="食材名稱："
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/text_view_border_black"
            android:gravity="top"
            android:padding="2dp"
            android:text="數量："
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/text_view_border_black"
            android:gravity="left"
            android:padding="2dp"
            android:text="價格："
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idConfirmFood"
            android:layout_width="190dp"
            android:layout_height="348dp"
            android:background="@drawable/text_view_border_black"
            android:gravity="top"
            android:letterSpacing="0.2"
            android:padding="10dp"
            android:textColor="@color/colorRed"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/idConfirmFoodQua"
            android:layout_width="60dp"
            android:layout_height="348dp"
            android:background="@drawable/text_view_border_black"
            android:gravity="top"
            android:letterSpacing="0.1"

            android:padding="10dp"
            android:textColor="@color/colorRed"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/idConfirmFoodStotal"
            android:layout_width="100dp"
            android:layout_height="348dp"
            android:background="@drawable/text_view_border_black"
            android:gravity="top"
            android:letterSpacing="0.1"
            android:padding="10dp"
            android:textColor="@color/colorRed"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="81dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="總共："
            android:textColor="@color/colorRed"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idFoodMall_Total"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorRed"
            android:textSize="18dp" />

    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/idFoodOrderCheckNext"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorBlue"
        android:text="下一步"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/idFoodOrderCheckOK"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorBlue"
        android:text="送出"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />

    <Button
        android:id="@+id/idFoodOrderCancel"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorBlue"
        android:text="取消"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/idChef_Or_Data"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:visibility="gone">
        <!--android:visibility="gone"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="收件人姓名：" />

            <EditText
                android:id="@+id/idCheckName"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="收件人電話：" />

            <EditText
                android:id="@+id/idCheckTel"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="收件人地址：" />

            <EditText
                android:id="@+id/idCheckAddr"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/rbtnChefData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="同會員資料" />


    </LinearLayout>


</RelativeLayout>