<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:padding="16dp"
        android:text="食材明細"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="308dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="食材詳細資料："
        android:textSize="18dp" />

    <TextView
        android:id="@+id/idfood_M_Resume"
        android:layout_width="308dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/text_view_border_black"
        android:padding="3dp" />

    <TextView
        android:id="@+id/idfood_M_Detail_Handler"
        android:layout_width="308dp"
        android:layout_height="36dp"
        android:layout_below="@+id/idfood_M_Resume"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="適合哪種菜色?"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/idfood_M_Detail_Handler_View"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/text_view_border_black"
        android:padding="4dp" />

    <Button
        android:id="@+id/btnfood_M_Resume_Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorBlue"
        android:text="返回"
        android:textColor="@color/colorWhite" />

</LinearLayout>