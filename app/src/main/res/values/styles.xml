<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 黑色頂端列-->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorGary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorBlack</item><!-- menu背景顏色-->
        <item name="android:textColor">@color/colorWhite</item> <!-- menu字體顏色-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomDayTextAppearance"
        parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="CustomWeekTextAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
